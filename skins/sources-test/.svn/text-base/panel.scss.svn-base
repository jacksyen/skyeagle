/* panel.scss*/
@import "include.scss";


$num-1: 1px;
$font-si: 12px;
$num-0: 0;

.panel{
	overflow: $of-hi;
	font-size: $font-si;
	z-index: $z-axis;
}
.panel-header{
	padding: 5px;
	line-height: 15px;
	color: #15428b;
	font: {
	  weight: bold;
	  size: $font-si;
	}
	@include Func-bg('panel/panel_title.gif', repeat-x);
	position: $pos-re;
	@include basic-bd(#99BBE8);
}
.panel-title{
	@include Func-bg('panel/blank.gif');
}
.panel-header-noborder{
	border: {
	  width: $num-0;
	  bottom: 1px solid #99BBE8;
	}
}
.panel-body{
	overflow: $of-aut;
	@include basic-bd(#99BBE8);
	background-color: #FFFFFF;
	border-top-width: $num-0;
}
.panel-body-noheader{
	border-top-width: 1px;
}
.panel-body-noborder{
	border-width: $num-0;
}
.panel-with-icon{
	padding-left: 18px;
}
.panel-icon{
	position: $pos-ab;
	left: 5px;
	top: 4px;
	width: 16px;
	height: 16px;
}

.panel-tool{
	position: $pos-ab;
	right: 5px;
	top: 4px;
	a {
	  display: $dis-il;
    width: 15px;
    height: 15px;
    opacity: .6;
    filter: alpha(opacity=60);
    margin-left: 2px;
    &:hover {
      opacity: 1;
      filter: alpha(opacity=100);
    }
	}
}
.panel-tool-close{
	@include Func-bg('layout/tools.gif');
}
.panel-tool-min{
	@include Func-bg('panel/panel_tools.gif');
}
.panel-tool-max{
	@include Func-bg('panel/panel_tools.gif', no-repeat, 0 -16px);
}
.panel-tool-restore{
	@include Func-bg('panel/panel_tools.gif', no-repeat, -16px -16px);
}
.panel-tool-collapse{
	@include Func-bg('layout/tools.gif', no-repeat, 0 -60px);
}
.panel-tool-expand{
	@include Func-bg('layout/tools.gif', no-repeat, 0 -45px);
}
.panel-loading{
	padding: 11px 0 10px 30px;
	@include Func-bg('panel/panel_loading.gif', no-repeat, 10px 10px);
}
.panel-noscroll{
	overflow: $of-hi;
}
