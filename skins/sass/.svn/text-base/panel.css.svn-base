/* panel.scss */
.panel {
  overflow: hidden;
  font-size: 12px; }

.panel-header {
  font-weight: bold;
  font-size: 12px;
  padding: 5px;
  line-height: 15px;
  color: #15428b;
  position: relative;
  border: 1px solid #99bbe8;
  background-image: url("../images/panel_title.gif");
  background-repeat: repeat-x;
  background-position: 0 0; }

.panel-title {
  background-image: url("../images/blank.gif");
  background-repeat: no-repeat;
  background-position: 0 0; }

.panel-title-vertical {
  color: #15428b;
  border: 0px solid red;
  writing-mode: tb-rl;
  -webkit-transform: rotate(90deg);
  -moz-transform: rotate(90deg);
  -o-transform: rotate(90deg);
  white-space: nowrap;
  display: block;
  bottom: 0;
  width: 20px;
  height: 20px;
  font-family: sans-serif;
  font-size: 12px;
  font-weight: 700;
  position: relative;
  top: 15px;
  left: -2px; }

.panel-header-noborder {
  border-width: 0px;
  border-bottom: 1px solid #99bbe8; }

.panel-body {
  border: 1px solid #99bbe8;
  border-top-width: 0px;
  overflow-y: auto !important; }

.panel-body-noheader {
  border-top-width: 1px; }

.panel-body-noborder {
  border-width: 0px; }

.panel-with-icon {
  padding-left: 18px; }

.panel-icon {
  position: absolute;
  left: 5px;
  top: 4px;
  width: 16px;
  height: 16px; }

.panel-tool {
  position: absolute;
  right: 5px;
  top: 4px; }
  .panel-tool a {
    display: inline-block;
    margin-left: 2px;
    width: 16px;
    height: 16px;
    opacity: 0.6;
    filter: alpha(opacity=60); }
    .panel-tool a:hover {
      opacity: 1;
      filter: alpha(opacity=100); }

.panel-tool-close {
  background-image: url("../images/panel_tools.gif");
  background-repeat: no-repeat;
  background-position: -16px 0px; }

.panel-tool-collapse {
  background-image: url("../images/panel_tool_collapse.gif");
  background-repeat: no-repeat;
  background-position: 0 0; }

.panel-tool-collapse-left {
  background-image: url("../images/panel_tool_collapse_left.gif");
  background-repeat: no-repeat;
  background-position: 0 0; }

.panel-tool-expand {
  background-image: url("../images/panel_tool_expand.gif");
  background-repeat: no-repeat;
  background-position: 0 0; }

.panel-tool-expand-right {
  background-image: url("../images/panel_tool_expand_right.gif");
  background-repeat: no-repeat;
  background-position: 0 0; }

.panel-loading {
  padding: 11px 0px 10px 30px;
  background-image: url("../images/panel_loading.gif");
  background-repeat: no-repeat;
  background-position: 10px 10px; }

.panel-noscroll {
  overflow: hidden; }

.panel-layout-expand {
  padding: 0px;
  background-image: url("../images/panel_title_v.gif");
  background-repeat: repeat-y;
  background-position: 0 0;
  font-size: 1px;
  cursor: pointer;
  z-index: 1;
  border: 1px solid #99bbe8;
  border-top-width: 0px;
  border-left-width: 0px; }
  .panel-layout-expand .panel-header {
    background: transparent;
    border-bottom-width: 0;
    border-right-width: 0; }
    .panel-layout-expand .panel-header .panel-tool {
      top: 5px; }
  .panel-layout-expand .panel-body {
    overflow: hidden; }
