.ui-tabs .ui-tabs-scroll-left {
	background : url(images/tabs/tabs_leftarrow.gif) no-repeat;
	height: 20px;
    left: 0;
    position: absolute;
    top: 1px;
    width: 18px;
    cursor: pointer;
    z-index: 100;
}
.ui-tabs .ui-tabs-scroll-right {
	background : url(images/tabs/tabs_rightarrow.gif) no-repeat;
	height: 20px;
    right: 0;
    position: absolute;
    top: 1px;
    width: 18px;
    cursor: pointer;
    z-index: 100;
}
.ui-tabs .ui-tabs-scroll-right:hover {
	background-position: -18px 0;
}
.ui-tabs .ui-tabs-scroll-left:hover {
	background-position: -18px 0;
}
.ui-tabs .ui-tabs-scroll-disabled {
	background-position: 0 0 !important;
    cursor: default;
    filter: alpha(opacity=50);
    -moz-opacity: .5;
    opacity: .5;
}
.ui-tabs .ui-icon-close {
	float: left;
	margin: .4em .2em 0 0;
	cursor: pointer;
}
.ui-tabs .ui-tabs-headers {
    overflow: hidden;
    padding: 2px 0 0;
    position: relative;
    border-width: 0;
    _width: 100%;	/*just for IE6*/
}
.ui-tabs .ui-tabs-headers .ui-state-default a{
	color: #23466D;
}
.ui-tabs .ui-tabs-headers ul {
    width: 5000px;
    font-size: 12px;
    margin: 0 ;
    padding: 0 0 0 4px;
/*    border-bottom: 1px solid #86A3C4;*/
}
.ui-tabs .ui-tabs-headers ul.ui-tabs-scrollable {
	padding : 0 23px;
	position: relative;
}
.ui-tabs .ui-tabs-headers ul li {
	background: url(images/tabs/tabs_enable.gif) repeat-x scroll 50% 50% #E6E6E6;
/*	background: url("images/tabs/ui-tabs-bg-d.png") repeat-x scroll 0 0 #DCF0FB;*/
    display: inline-block;
    margin: 0 4px -1px 0;
    padding: 0;
    position : relative;
    -moz-user-select: none;
    float: left;
    
}
.ui-tabs .ui-tabs-headers ul li.ui-state-hover{
	background: url(images/tabs/tabs_active.gif) repeat-x scroll 50% 50% #FFFFFF;
/*	background: url("images/tabs/ui-tabs-bg-h.png") repeat-x scroll 0 0 #DAEAFA;*/
}
.ui-tabs .ui-tabs-headers ul li.ui-tabs-activated {
	border-bottom: 0 none;
	height: 19px;
/*	border-color: #8DB2E3 #8DB2E3 #FFFFFF;*/
	background: url(images/tabs/tabs_active.gif) repeat-x scroll 50% 50% #DEECFD;
/*	background: url("images/tabs/ui-tabs-bg-a.png") repeat-x scroll 0 0 #FFFFFF;*/
	font-weight: bold;
}
.ui-tabs .ui-tabs-headers ul li a.ui-tabs-inner {
    text-align: center;
    text-decoration: none;
    outline: none;
    white-space: nowrap;
    float: left;
    padding: 0 10px;
}
.ui-tabs .ui-tabs-headers ul li a.ui-icon-close{
	background: url(images/tabs/tabs-default-close.gif) no-repeat scroll 0 0;
/*	background: url("images/tabs/ui-tabs-closebtn.gif") no-repeat;*/
    display: block;
    height: 11px;
    width: 11px;
    margin: 3px 3px 0 0; 
    opacity: .6;
	filter: alpha(opacity=60);
}
.ui-tabs .ui-tabs-headers ul li.ui-state-hover a.ui-icon-close{
	opacity: 1;
	filter: alpha(opacity=100);
	cursor: hand;
	cursor: pointer;
}

.ui-tabs .ui-tabs-panels {
    overflow: auto;
    margin: 0;
    padding: 0;
    border-width: 0;
}
.ui-tabs .ui-tabs-panels .ui-panel-body{
	padding: 1em;
}
.ui-tabs-noborder {
	border-width: 0;
}