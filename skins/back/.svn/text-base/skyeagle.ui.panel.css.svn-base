.sy-panel{
	overflow: hidden;
}
.sy-panel-header{
 	padding: 5px;
 	height: 14px;
 	line-height: 14px;
 	background: url("images/panel/panel_title.gif") repeat-x scroll 0 0 #FFFFFF;
 	border:1px solid #99BBE8;
 	position: relative;
 }
.sy-panel-body{
 	background-image: none;
 	border-top-width: 0;
 	padding: 1em;
 	overflow: auto;
}
.sy-panel-noheader{
 	border-top-width:1px;
}
.sy-panel-title{
	white-space: nowrap;
	overflow: hidden;
}
.sy-panel-icon{
	float: left;
	background-image: none;
	width:20px;
	height:18px;
}
.sy-panel-tool{
	position: absolute;
	right: 5px;
	top: 3px;
}
.sy-panel-tool div.ui-icon{
	float:left;
	margin-left:2px;
	cursor:pointer;
	width: 20px;
	height: 18px;
	line-height: 18px;
	display:block;
}
.sy-panel-loadingMessage{
	background-color: white;
    left: 0;
    opacity: .8; filter:Alpha(Opacity=80);
    position: absolute;
    top: 0;
    z-index:100;
}
.sy-panel-loadingMessage .valignMiddle{
	left: 50%;
   	margin-left: -30px;
   	margin-top: -8px;
   	position: absolute;
   	top: 50%;
}
.sy-panel-loadingMessage .loadingImg{
	background: url("images/loading.gif") repeat scroll 0 0 transparent;
    height: 16px;
    padding-left:20px;
    background-repeat: no-repeat;
}
.sy-panel-tool-collapse{
	background: url("images/ui-toolbar-btn.png") no-repeat scroll -22px 0 transparent
}
.sy-panel-tool-expand{
	background: url("images/ui-toolbar-btn.png") no-repeat scroll -2px 0 transparent
}
.sy-panel-tool-min{
	background: url("images/ui-toolbar-btn.png") no-repeat scroll -44px 0 transparent
}
.sy-panel-tool-max{
	background: url("images/ui-toolbar-btn.png") no-repeat scroll -67px 0 transparent
}
.sy-panel-tool-close{
	background: url("images/ui-toolbar-btn.png") no-repeat scroll -90px 0 transparent
}

.sy-panel-tool-collapse-hover{
	background-position: -22px -36px;
}
.sy-panel-tool-expand-hover{
	background-position: -2px -36px;
}
.sy-panel-tool-min-hover{
	background-position: -44px -36px;
}
.sy-panel-tool-max-hover{
	background-position: -67px -36px;
}
.sy-panel-tool-close-hover{
	background-position: -90px -36px;
}