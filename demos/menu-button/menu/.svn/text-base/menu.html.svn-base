		<script type="text/javascript" language="JavaScript" src="../../../plugins/jquery-ui/skyeagle.ui.menu.js"></script>

		<link rel="stylesheet" href="../../../skins/jquery.ui.core.css" />
		<link rel="stylesheet" href="../../../skins/jquery.ui.theme.css" />
		<link rel="stylesheet" href="../../../skins/skyeagle.ui.menu.css" />

		<script>
			$(document).ready(function() {
				$('#mm').menu({
					// left : 100,
					// top  : 100,
					onShow : function (){
						//alert('show');
					},
					onClick : function (event, item){
						alert('item:' +',id:'+item.id +',text:' +item.text);
					}
				});
				
				$('#btn').click(function() {
					$('#mm').menu('show');	
				});
				$('#btn2').click(function() {
					$('#mm').menu('hide');	
				});
				$('#btn3').click(function() {
					var item = $('#mm').menu('findItem', 'Open');	
					alert('item:'+' id:'+item.id + ',text:' + item.text + ',iconCls:' + item.iconCls);
				});
				$('#btn4').click(function() {
					$('#mm').menu('destroy');	
				});
				$(document).bind('contextmenu', function(e) {
					$('#mm').menu('show', {
						left : e.pageX,
						top : e.pageY
					});
					return false;
				});
			});
		</script>
		<style>
			div {
				font-size: 12px;
			}
		</style>

	</head>
