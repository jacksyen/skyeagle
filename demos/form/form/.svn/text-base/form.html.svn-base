				});

				
				$('#myform').form({
					url : 'xxx.action',
					onSubmit : function (){
						return $(this).form('validate');
						
						//$('#myform')[0].submit();
						// alert('sa');
						//bind('submit.form')
					},
					onSuccess : function (ui, data){
						alert('success' + data);
					}
				});
				//$('#myform').form('submit');
				$('#sub').click(function (){
					$('#myform').form('submit');
				});
			});
		</script>
