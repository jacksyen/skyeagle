		<script type="text/javascript" language="JavaScript" src="../../../plugins/jquery-ui/jquery.ui.widget.js"></script>
		<script type="text/javascript" language="JavaScript" src="../../../plugins/jquery-ui/jquery.ui.mouse.js"></script>
		<script type="text/javascript" language="JavaScript" src="../../../plugins/form/jquery.ui.validatebox.js"></script>
		<script type="text/javascript" language="JavaScript" src="../../../plugins/form/jquery.ui.form.js"></script>

		<script type="text/javascript" language="JavaScript" src="../../js/left.js"></script>
		<script type="text/javascript" language="JavaScript" src="../../js/hl/highlight.js"></script>
		<script type="text/javascript" language="JavaScript" src="../../js/hl/lang-js.js"></script>
		<script type="text/javascript" language="JavaScript" src="../../js/hl/lang-xml.js"></script>
		<script type="text/javascript" language="JavaScript" src="../../js/hl/lang-html.js"></script>
		<script type="text/javascript" language="JavaScript" src="../../js/hl/lang-css.js"></script>
		<script type="text/javascript" language="JavaScript" src="../../js/hl/helpers.js"></script>
		<!-- 		<script type="text/javascript" language="JavaScript" src="../../js/main.js"></script> -->

		
		<link rel="stylesheet" href="../../../skins/jquery.ui.core.css" />
		<link rel="stylesheet" href="../../../skins/jquery.ui.theme.css" />
		<link rel="stylesheet" href="../../../skins/jquery.ui.validatebox.css" />
		<!-- <link rel="stylesheet" href="../../../skins/jquery.ui.form.css" /> -->

		<link rel="stylesheet" href="../../js/hl/style.css" />
		
		<link rel="stylesheet" href="../../css/command.css" />
		<link rel="stylesheet" href="../../css/index.css" />
		<script>
			$(document).ready(function() {
				/**
				 * demo 1 
				 */
				$('#v1').validatebox({
					required : true
				});
				$('#v2').validatebox({
					required : true
				});
				$('#myform1').form({
					url : 'xxx.action'
				});
				/**
				 * demo 2 
				 */
				$('#v3').validatebox({
					required : true
				});
				$('#v4').validatebox({
					required : true
				});
				$('#myform2').form({
					url : 'xxx.action',
					onSubmit : function (){
						return $(this).form('validate');
					},
					onSuccess : function (ui, data){
						alert('success' + data);
					}
				});
				// 代码高亮
				DlHighlight.HELPERS.highlightByName("form", "pre");
			});
		</script>
		<style>
			
		</style>
	</head>
	<body>
		<div class="body">
			<div class="top">

			</div>
			<div class="main">
				<div class="leftColumn">
					<!-- init command -->
				</div>
				<div class="mainColumn">
					<div class="block" id="demos-nav">
						<h4>Examples</h4>
						<ul>
							<li class="demo-config-on"><a href="#demo1">默认功能</a></li>
							<li><a href="#demo2">事件示例</a></li>
							<!-- <li><a href="#demo3">显示按钮</a></li> -->
						</ul>
					</div>
					<div class="block" id="demo1">
						<h1>示例一（默认功能）</h1>
						<div class="line-block" >
								<form id="myform1" >
									<input type="text" id="v1" />
									<br/>
									<br/>
									<input type="text" id="v2" />
									<br/>
									<br/>
									<input type="submit" />
								</form>
							<div class="code">
<pre name="form" class="js">
$('#v1').validatebox({
	required : true
});
$('#v2').validatebox({
	required : true
});
$('#myform1').form({
	url : 'xxx.action'
});
</pre>
							</div>
						</div>
					</div>
					<!-- end of demo1 -->
					<div class="block" id="demo2">
						<h1>示例二（事件示例）</h1>
						<div class="line-block" >
								<form id="myform2" >
									<input type="text" id="v3" />
									<br/>
									<br/>
									<input type="text" id="v4" />
									<br/>
									<br/>
									<input type="submit" />
								</form>
							<div class="code">
<pre name="form" class="js">
$('#v3').validatebox({
	required : true
});
$('#v4').validatebox({
	required : true
});
$('#myform2').form({
	url : 'xxx.action',
	onSubmit : function (){			// 提交表单之前触发
		return $(this).form('validate');
	},
	onSuccess : function (ui, data){		// 提交成功触发
		alert('success' + data);
	}
});
</pre>
							</div>
						</div>
					</div>
					<!-- end of demo2 -->
				</div>
			</div>
		</div>
	</body>
</html>