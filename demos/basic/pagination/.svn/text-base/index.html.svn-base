		<script>
			$(document).ready(function() {
				/**
				 * demo 1 
				 */
				$('#pager1').pagination({
					
				});
				
				/**
				 * demo 2 
				 */
				$('#pager2').pagination({
					total : 50,
					pageSize : 10,
					pageNumber : 1,
					pageList : [10, 20, 30, 50],
					loading : false,
					buttons : null,
					onSelectPage:function(event, ui){
						$(this).pagination('loading');
						alert('pageNumber:'+ui.pageNumber+',pageSize:'+ui.pageSize);
						$(this).pagination('loaded');
					},
					onBeforeRefresh : function (event, ui){
						alert('onBeforeRefresh');
					},
					onRefresh : function (event, ui){
						alert('onRefresh');
					},
					onChangePageSize : function (event, pageSize){
						alert('pageSize:'+pageSize);
					}
				});
				
				/**
				 * demo 3 
				 */
				$('#pager3').pagination({
					buttons : [{
						iconCls : 'custom-icon',
						handler : function (){
							alert('click custom button');
						}
					}]
				});

				// 代码高亮
				DlHighlight.HELPERS.highlightByName("pager", "pre");
			});
		</script>
		<style>
			
		</style>
